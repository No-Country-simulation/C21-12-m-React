generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums para valores constantes
enum EstadoProyecto {
  PAUSADO
  ACTIVO
  COMPLETO
  CERRADO
}

enum Prioridad {
  BAJA
  MEDIA
  ALTA
}

enum TipoActividad {
  LLAMADA
  REUNION
  EMAIL
  OTRO
}
enum EstadoCliente {
  CONTACTO
  REUNION
  PROPUESTA
  NEGOCIACION
}

model Cliente {
  id                Int        @id @default(autoincrement())
  nombre            String
  estado            EstadoCliente
  prioridad         Prioridad
  valorEstimado     Float?
  managerId         String?    
  manager           Manager?   @relation(fields: [managerId], references: [id])
  origen            String
  email             String     @unique
  telefono          String     
  ultimoContacto    DateTime?
  fechaCierreEstimada DateTime?
  proyectos         Proyecto[] @relation("ClienteProyectos")
  actividades       Actividad[]
  createdAt         DateTime   @default(now())   // Fecha de creación
  updatedAt         DateTime   @updatedAt        //echa de última actualización F

  @@map("clientes")
}


model Proyecto {
  id              Int        @id @default(autoincrement())
  cliente         Cliente    @relation("ClienteProyectos", fields: [clienteId], references: [id])
  clienteId       Int
  nombre          String
  descripcion     String
  valor           Float
  estado          EstadoProyecto
  fechaInicio     DateTime
  fechaCierreEstimada DateTime
  responsableId   String
  responsable     Manager    @relation(fields: [responsableId], references: [id])
  actividades     Actividad[]
  etapas          Etapa[]  
  @@map("proyectos")
}


model Actividad {
  id             Int      @id @default(autoincrement())
  cliente        Cliente   @relation(fields: [clienteId], references: [id])
  clienteId      Int
  proyecto       Proyecto? @relation(fields: [proyectoId], references: [id])
  proyectoId     Int?
  fecha          DateTime
  tipo           TipoActividad
  descripcion    String
  responsableId  String
  responsable    Manager   @relation(fields: [responsableId], references: [id])

  @@map("actividades")
}

model Manager {
  id       String   @id @default(uuid()) 
  nombre   String
  avatar   String   
  clientes Cliente[] 

  @@map("managers")
  Proyecto Proyecto[]
  Actividad Actividad[]
}

model Etapa {
  id          Int        @id @default(autoincrement())
  nombre      String
  orden       Int
  descripcion String
  proyectos   Proyecto[] 

  @@map("etapas")
}

